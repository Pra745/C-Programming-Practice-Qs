#include <stdio.h>

void main()
{
    int n, t, r, d;
    printf("Enter a number");
    scanf("%d", &n);
    t=n;
    while(n>0)
    {
        d=n%10;
        r=r*10+d;
        n=n/10;
    }
    if (r==t)
    printf("Palindrome number");
    else
    printf("Not a palindrome number");
    getch();
}
